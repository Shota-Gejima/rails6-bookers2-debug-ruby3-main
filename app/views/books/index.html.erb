<h3>

  <% if @book.errors.any? %>

    <%= @book.errors.count %> errors prohibited this obj from being saved:
  
    <ul>
  
      <% @book.errors.full_messages.each do |message| %>
  
        <li><%= message %></li>
    
      <% end %>
  
    </ul>

  <% end %>

</h3>

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user, isRoom: @isRoom, room: @room, roomId: @roomId, entry: @entry %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <div id= "index_books">
        <%= render 'index', books: @books%>
      </div>
      
      <h3>7日間分の投稿数</h3>
      <table class= "table table-bordered">
        <tr>
          <th>6日目</th>
          <th>5日目</th>
          <th>4日目</th>
          <th>3日目</th>
          <th>2日目</th>
          <th>1日目</th>
          <th>今日</th>
        </tr>
          <td><%= @books_count.created_6days.count %></td>
          <td><%= @books_count.created_5days.count %></td>
          <td><%= @books_count.created_4days.count %></td>
          <td><%= @books_count.created_3days.count %></td>
          <td><%= @books_count.created_2days.count %></td>
          <td><%= @books_count.created_yesterday.count %></td>
          <td><%= @books_count.created_today.count %></td>
      </table>
    </div>
  </div>
</div>